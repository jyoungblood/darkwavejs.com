---
import { getCollection } from 'astro:content';
import ComponentsLayout from '../../layouts/ComponentsLayout.astro';

export async function getStaticPaths() {
  const componentsEntries = await getCollection('components');
  return componentsEntries.map((entry) => ({
    params: { slug: entry.slug === 'index' ? undefined : entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<ComponentsLayout title={entry.data.title} description={entry.data.description}>
  <Content />
</ComponentsLayout>
