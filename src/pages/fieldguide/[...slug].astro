---
import { getCollection } from 'astro:content';
import FieldGuideLayout from '../../layouts/FieldGuideLayout.astro';

export async function getStaticPaths() {
  const fieldguideEntries = await getCollection('fieldguide', ({ data }) => {
    return !data.status || data.status === 'published';
  });
  return fieldguideEntries.map((entry) => ({
    params: { slug: entry.slug === 'index' ? undefined : entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<FieldGuideLayout title={entry.data.title} description={entry.data.description}>
  <Content />
</FieldGuideLayout>
