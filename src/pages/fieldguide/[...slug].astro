---
import { getCollection } from 'astro:content';
import FieldGuideLayout from '../../layouts/FieldGuideLayout.astro';
import { getFieldguidePrevNext } from '../../utils/navigation';

export async function getStaticPaths() {
  // Only include content explicitly marked as published (draft by default)
  const fieldguideEntries = await getCollection('fieldguide', ({ data }) => {
    return data.status === 'published';
  });
  return fieldguideEntries.map((entry) => ({
    params: { slug: entry.slug === 'index' ? undefined : entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { prev, next } = await getFieldguidePrevNext(entry.slug);
---

<FieldGuideLayout title={entry.data.title} description={entry.data.description} prev={prev} next={next}>
  <Content />
</FieldGuideLayout>
